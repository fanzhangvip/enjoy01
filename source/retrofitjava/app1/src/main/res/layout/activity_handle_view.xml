<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jinlong.newmaterialdesign.animation.HandleViewActivity">

    <Button
        android:id="@+id/btn_fade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="fadeTransition"
        android:text="渐变效果" />

    <Button
        android:id="@+id/btn_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="slideTransition"
        android:text="移动效果"
        app:layout_constraintLeft_toRightOf="@id/btn_fade" />

    <Button
        android:id="@+id/btn_explode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="explodeTransition"
        android:text="炸裂效果"
        app:layout_constraintLeft_toRightOf="@id/btn_slide" />

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="请看这里的效果"
        app:layout_constraintTop_toBottomOf="@id/btn_fade" />

</androidx.constraintlayout.widget.ConstraintLayout>
